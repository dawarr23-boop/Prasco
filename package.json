{
  "name": "digital-bulletin-board",
  "version": "2.1.0",
  "description": "Enterprise Digital Signage Platform - PRASCO",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch src --ext ts --exec \"tsc && node dist/server.js\"",
    "dev:ts": "nodemon --exec ts-node src/server.ts",
    "dev:debug": "nodemon --exec node --inspect -r ts-node/register src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "build:pi": "cross-env NODE_ENV=production DEVICE_TYPE=pi tsc",
    "build:desktop": "cross-env NODE_ENV=production DEVICE_TYPE=desktop tsc",
    "deploy:pi": "npm run build:pi && node scripts/deploy-to-pi.js",
    "deploy:pi-full": "npm run build:pi && scp -r dist css js views public pi@192.168.2.47:/home/pi/prasco/ && ssh pi@192.168.2.47 'cd /home/pi/prasco && pm2 restart prasco'",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "db:seed": "node scripts/seed.js",
    "db:seed-examples": "ts-node src/database/seeders/htmlExamples.ts",
    "db:migrate": "node scripts/migrate.js",
    "db:migrate:status": "node scripts/migrate.js --status",
    "db:setup": "npm run build && node scripts/migrate.js && node scripts/seed.js",
    "db:reset": "node scripts/reset.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "bulletin-board",
    "raspberry-pi",
    "digital-signage",
    "nodejs",
    "enterprise",
    "multi-tenant"
  ],
  "author": "PRASCO",
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.0.1",
    "hafas-client": "^6.3.1",
    "helmet": "^7.2.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "ldapts": "^8.0.19",
    "mime-types": "^3.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "openid-client": "^6.8.1",
    "passport": "^0.7.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.6",
    "@types/sharp": "^0.31.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "cross-env": "^10.1.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
