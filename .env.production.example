# PRASCO Production Environment Configuration
# Copy this file to .env.production and update with your values

# Environment
NODE_ENV=production

# Server
PORT=3000

# SSL/HTTPS Configuration (recommended for production)
SSL_ENABLED=true
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# Database - PostgreSQL (Production)
DB_DIALECT=postgres
DB_HOST=postgres
DB_PORT=5432
DB_NAME=prasco
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# JWT Authentication (IMPORTANT: Change these!)
JWT_SECRET=CHANGE_THIS_LONG_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=CHANGE_THIS_DIFFERENT_LONG_RANDOM_STRING
JWT_REFRESH_EXPIRES_IN=7d

# Redis (Caching & Sessions)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,video/webm,application/pdf
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
AUTH_RATE_LIMIT_MAX=30
UPLOAD_RATE_LIMIT_MAX=100

# Admin Account (First-time setup)
ADMIN_EMAIL=admin@prasco.net
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD

# CORS (allowed origins, comma-separated)
ALLOWED_ORIGINS=https://prasco.net,https://www.prasco.net

# Session
SESSION_SECRET=CHANGE_THIS_SESSION_SECRET

# Email (optional - for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=noreply@prasco.net
# SMTP_PASSWORD=your_smtp_password
# SMTP_FROM=PRASCO <noreply@prasco.net>

# Monitoring (optional)
# SENTRY_DSN=your_sentry_dsn_here
# APM_SERVER_URL=your_apm_server_url
