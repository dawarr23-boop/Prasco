# PRASCO Digital Signage - Production Environment
# WICHTIG: Diese Datei NICHT in Git committen!
# Kopiere diese Datei nach .env und passe die Werte an

# Environment
NODE_ENV=production

# Server
PORT=3000

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bulletin_board
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# JWT Authentication - UNBEDINGT ÄNDERN!
JWT_SECRET=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_VERY_LONG_RANDOM_STRING_AT_LEAST_64_CHARACTERS
JWT_REFRESH_EXPIRES_IN=7d

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/vnd.openxmlformats-officedocument.presentationml.presentation,application/vnd.ms-powerpoint,application/vnd.oasis.opendocument.presentation
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=warn

# Security - Passe an dein Netzwerk an
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# Admin Credentials - UNBEDINGT ÄNDERN!
ADMIN_EMAIL=admin@prasco.net
ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
