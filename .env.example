# Environment
NODE_ENV=development

# Server
PORT=3000

# SSL/HTTPS Configuration
SSL_ENABLED=false
SSL_KEY_PATH=./ssl/server.key
SSL_CERT_PATH=./ssl/server.crt

# Database - SQLite (recommended for Raspberry Pi)
DB_DIALECT=sqlite
DB_STORAGE=./data/prasco.db

# Database - PostgreSQL (alternative for production servers)
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bulletin_board
# DB_USER=postgres
# DB_PASSWORD=postgres

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Redis (optional - f√ºr Caching & Session)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://192.168.1.100:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_MAX=10

# Admin Default Credentials
ADMIN_EMAIL=admin@prasco.net
ADMIN_PASSWORD=admin123
